
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User profiles
    match /users/{userId} {
      // Allow any authenticated user to read profiles (needed for names/avatars)
      // and allow a user to read their own document regardless
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Site content (Public)
    match /content/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Events (Public)
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
      allow update: if request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees']);
    }

    // Gallery & Testimonials (Public Read)
    match /gallery/{itemId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    match /testimonials/{itemId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Restricted Collections
    match /messages/{itemId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /resources/{itemId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
